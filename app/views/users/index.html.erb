<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/user', user:@user %>
      <%= render 'books/book', book:@book %>
    </div>

    <div class="col-md-8 offset-1">
      <div class="mt-3">
        <h2>Users</h2>
        <table class="border-top w-100">
          <thead>
            <tr class="border-bottom">
              <th class="border-3 py-3 pl-2">image</th>
              <th>name</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr class="border-top">
                <td class="p-2"><%= image_tag user.get_profile_image(80,80) %></td>
                <td><%= user.name %></td>
                <td><%= link_to "show",user_path(user) %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
