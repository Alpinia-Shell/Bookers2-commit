<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/user', user:@user %>
      <%= render 'books/book', book:@book %>
    </div>

    <div class="col-md-8 offset-md-1 mt-3">
      <h2>Books</h2>
      <table class="border-top w-100">
        <thead>
          <tr class="border-bottom">
            <th></th>
            <th class="py-3">Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr class="border-bottom">
              <td class="p-2">
                <%= link_to user_path(@user) do %>
                  <%= image_tag book.user.get_profile_image(80,80) %>
                <% end %>
              </td>
              <td><%= link_to book.title,book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>