<% if @book.errors.any? %>
  <%= @book.errors.count %>
  <ul>
    <%= @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %> 
  </ul>
<% end %>

<h3>User info</h3>
<%= image_tag @user.get_profile_image(100,100) %>
<%= @user.name %>
<%= @user.introduction %>
<%= link_to "Setting",edit_user_registration_path(@user) %>

<h3>New Book</h3>
<%= form_with model: @book do |f| %>
  <%= f.label "Title" %>
    <%= f.text_field :title %>
  <%= f.label "Opinion" %>
    <%= f.text_area :body %>
  <%= f.submit 'Create Book' %> 
<% end %>

<h2>Books</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= image_tag book.user.get_profile_image(100,100)%>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
  <% end %> 
</table>