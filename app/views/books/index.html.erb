<h3>User info</h3>
<%= image_tag @user.get_profile_image(100,100) %>
<%= @user.name %>
<%= @user.introduction %>
<%= link_to "Setting",edit_user_registration_path(@user) %>

<h3>New Book</h3>
<%= form_with model: @book do |f| %>
  <%= f.text_field :title %>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %> 
<% end %>

<h2>Books</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to[book_path(book.id)] do %>
          <%= image_tag(book.user.get_profile_image(100,100))%>
        <% end %>
      </td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %> 
</table>