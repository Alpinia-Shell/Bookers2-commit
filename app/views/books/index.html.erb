<% if @book.errors.any? %>
  <%= @book.errors.count %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %> 
  </ul>
<% end %>

<%= render 'user',user: @user %>
<%= render 'book',book: @book %>

<h2>Books</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= image_tag book.user.get_profile_image(100,100)%>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
  <% end %> 
</table>