<%= render 'user',user: @user %>
<%= render 'book',book: @book %>
<div class="container">
  <h2>Book detail</h2>
  <div class="row">
    <div class="col-2 border-top pt-3">
      <%= image_tag @a_book.user.get_profile_image(100,100) %>
      <p><%= link_to @a_book.user.name,user_path %></p>
    </div>
    <div class="col-2 border-top pt-3">
      <%= link_to @a_book.title,book_path(@a_book) %>
    </div>
    <div class="col-2 border-top pt-3">
      <%= @a_book.body %>
    </div>

    <% if @a_book.user == current_user %>
      <div class="col-2 border-top pt-3">
        <%= link_to 'Edit', edit_book_path %>
      </div>
      <div class="col-2 border-top pt-3">
        <%= link_to 'Destroy', book_path, method: :delete, data: {confirm: "本当に消しますか？" } %>
      </div>
    <% end %>  
  </div>
</div>

