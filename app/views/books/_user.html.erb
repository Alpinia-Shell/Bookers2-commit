<div class="container">
  <div class="mt-3">
    <h2>User info</h2>
    <%= image_tag user.get_profile_image(100,100) %>

    <div class="row mt-3">
      <div class="col-2">
        <strong><p>name</p></strong>
      </div>
      <div class="col-2">
        <strong><%= user.name %></strong>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-2">
        <strong><p>introduction</p></strong>
      </div>
      <div class="col-2">
        <strong><%= user.introduction %></strong>
      </div>
      <%=link_to edit_user_registration_path(user) do %>
    </div>

    <i class="fa-solid fa-user-gear"></i>
    <% end %>
  </div>
</div>

