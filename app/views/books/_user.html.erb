<div class="container">
  <div class="mt-3">
    <h2>User info</h2>
    <%= image_tag user.get_profile_image(100,100) %>

  <table class="border-top mb-4 w-25">
    <tr>
      <th class= "py-2 border-bottom">name</th>
      <td class="border-bottom"><%= user.name %></td>
    </tr>
    <tr>
      <th class="py-2">introduction</th>
      <td><%= user.introduction %></td>
    </tr>
  </table>

  <%=link_to edit_user_registration_path(user) do %>
    <button type="botton" class="btn btn-outline-secondary w-25 mb-3">
      <i class="fa-solid fa-user-gear" style="color:gray;"></i>
    </botton>
  <% end %>
</div>

