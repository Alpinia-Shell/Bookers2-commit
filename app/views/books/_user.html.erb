
  <div class="mt-3">
    <h2>User info</h2>
    <%= image_tag user.get_profile_image(100,100) %>
  </div>

  <table class="border-top mb-3 w-100">
    <tr>
      <th class= "p-3 border-bottom ">name</th>
      <th class="border-bottom"><%= user.name %></th>
    </tr>
    <tr>
      <th class="p-3 ">introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </table>

  <%=link_to edit_user_path(user) do %>
    <button type="botton" class="btn btn-outline-secondary w-100 mb-3">
      <i class="fa-solid fa-user-gear"></i>
    </button>
  <% end %>


