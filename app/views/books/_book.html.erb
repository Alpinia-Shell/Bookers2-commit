<div class="container p-0">
  <div class="mt-3">
    <h3>New Book</h3>

    <%= form_with model: book do |f| %>
      <div class="form-group">
        <%= f.label "Title" %>
          <%= f.text_field :title,class:"form-control w-25" %>
      </div>
      <div class="form-group">
        <%= f.label "Opinion" %>
          <%= f.text_area :body,class:"form-control w-25" %>
      </div>
      <%= f.submit 'Create Book',class: "btn btn-success" %> 
    <% end %>
  </div>
</div>